{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:base',
    'schedule:weekly',
    'group:allNonMajor'
  ],
  labels: [
    'dependencies'
  ],
  ignorePaths: [
    '**/__tests__/**'
  ],
  rangeStrategy: 'bump',
  packageRules: [
    {
      depTypeList: [
        'peerDependencies'
      ],
      enabled: false,
    },
    {
      matchDepTypes: [
        'action'
      ],
      excludePackagePrefixes: [
        'actions/',
        'github/'
      ],
      pinDigests: true,
    },
  ],
  ignoreDeps: [
    // manual handling
    'esbuild',
    'rollup',
    'node',
    'typescript',
    // disruptive changes

    // breaking changes
  ],
  'github-actions': {
    fileMatch: [
      // default values
      '(^|/)(workflow-templates|\\.(?:github|gitea|forgejo)/(?:workflows|actions))/.+\\.ya?ml$',
      '(^|/)action\\.ya?ml$',
      // custom value
      '(^|/)docs/guide/static-deploy-github-pages\\.yaml$',
    ],
  },
  customManagers: [
    //    {
    //      customType: 'regex',
    //      fileMatch: [
    //         "packages\/create-vite\/src\/index\\.ts$"
    //      ],
    //      matchStrings: [
    //        //  Dependencies in the code
    //        '\/\/\\s*renovate:\\s+datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)\\s+(?:var|let|const)\\s+\\S+\\s*=\\s*["\'](?<currentValue>[^"\']+)["\']',
    //      ],
    //    },
  ],
}
