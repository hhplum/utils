{
  "name": "@hhplum/utils-monorepo",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "simple-git-hooks",
    "format": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "typecheck": "tsc -p scripts --noEmit && pnpm -r --parallel run typecheck",
    "build": "pnpm -r --filter='./packages/*' run build",
    "test": "vitest run",
    "release": "tsx scripts/release.ts",
    "ci:publish": "tsx scripts/publish.ts",
    "prepublish": "pnpm run build"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@hhplum/release-scripts": "^1.1.2",
    "@hhplum/utils-browser": "workspace:^",
    "@hhplum/utils-global": "workspace:^",
    "@hhplum/utils-node": "workspace:^",
    "@hhplum/utils-test": "workspace:^",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^18.19.39",
    "conventional-changelog-cli": "^5.0.0",
    "esbuild": "^0.25.2",
    "eslint": "^9.25.0",
    "eslint-plugin-import-x": "^4.10.5",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-regexp": "^2.7.0",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "rollup": "^4.40.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "simple-git-hooks": "^2.12.1",
    "tslib": "^2.8.1",
    "tsx": "^4.19.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vitest": "^3.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm -r --parallel run prebuild && pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "*": [
      "prettier --write --cache --ignore-unknown"
    ],
    "packages/*/{src,types}/**/*.ts": [
      "eslint --cache --fix"
    ],
    "packages/**/*.d.ts": [
      "eslint --cache --fix"
    ]
  },
  "packageManager": "pnpm@10.9.0"
}
